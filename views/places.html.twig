<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <title>Places You've Been</title>
</head>
<body>
    <div class="container">
        <h1>Places You've Been</h1>
        <!--list all the user inputed data -->
        {% if places is not empty %}
            <p> here are all your places: </p>
            <ul>
                {% for place in places %}
                    <li>{{ place.getDescription }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/places' method='post'>
            <div class="form-group">
            <label for='description'>place Description</label>
            <input id='description' name='description' type='form-control'>


            <button class="btn btn-primary" type='submit'>Add place</button>
        </div>

        </form>
        <form action='/delete_places' method='post'>
            <div class="form-group">
            <button class="btn btn-primary" type='submit'>Clear</button>
        </div>
        </form>
    </div>

</body>
</html>
