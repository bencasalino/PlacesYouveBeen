<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <title>Places You've Been</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-12">
                <h1>Places You've Been</h1>
                <!--list all the user inputed data -->
                {% if places is not empty %}
                    <p>Here are all your places:</p>
                        {% for place in places %}
                            <p><b>{{ place.getcityname }}</b></p>
                            <ul><li>{{ place.getdurationstayed }} </li>
                            <li><img src="{{ place.getcityimage }}"></li></ul>
                        {% endfor %}
                {% endif %}

                <form action='/places' method='post'>
                    <div class="form-group">
                        <label for='cityname'>City Name </label>
                        <input class="form-control" id='cityname' name='cityname' type='text'>
                    </div>

                    <div class="form-group">
                        <label for='durationstayed'>Days Visited </label>
                        <input class="form-control" id='durationstayed' name='durationstayed' type='text'>

                    </div>
                    <form action='/places' method='post'>
                        <div class="form-group">
                            <label for='cityimage'>City Image </label>
                            <input class="form-control" id='cityimage' name='cityimage' type='text'>
                        </div>



                    <button class="btn btn-primary btn-block" type='submit'>Add place</button>


                </form>
                <form action='/delete_places' method='post'>
                    <div class="form-group">
                    <button class="btn btn-danger btn-block" type='submit'>Clear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
