<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <title>Places You've Been</title>
</head>
<body>
    <div class="container">
        <h1>Places You've Been</h1>
        <!--list all the user inputed data -->
        {% if places is not empty %}
            <p>Here are all your places:</p>
                {% for place in places %}
                    <p><b>{{ place.getcityname }}</b></p>
                    <ul><li>{{ place.getdurationstayed }} </li></ul>
                {% endfor %}
        {% endif %}

        <form action='/places' method='post'>
            <div class="form-group">
                <label for='cityname'>City Name </label>
                <input id='cityname' name='cityname' type='form-control'>
            </div>

            <div class="form-group">
                <label for='durationstayed'>Days Visited </label>
                <input id='durationstayed' name='durationstayed' type='form-control'>

            </div>
            <button class="btn btn-primary" type='submit'>Add place</button>


        </form>
        <form action='/delete_places' method='post'>
            <div class="form-group">
            <button class="btn btn-primary" type='submit'>Clear</button>
        </div>
        </form>
    </div>

</body>
</html>
